class OpponentShot {
	
	field int x, y, size;
	
	constructor OpponentShot new (int startX) {
		let x = startX;
		let y = 50;
		let size = 4;
		return this;
	}
	
	
	method void disposeMem() {
		do Screen.setColor(false);
	    do Screen.drawRectangle(x, y, x + size, y + size);
	    let x = 500;
	    let y = 245;
	    do Screen.setColor(true);
        return;
	}
	
	method int getY() {
		return y;
	}
	
	method int getX() {
		return x;
	}

	method void draw(int bool) {
		if (bool = 1) {
		    do Screen.setColor(true);
		}
		else {
			do Screen.setColor(false);
		}
		
		if ((x > 0) & (y > 0) & ((x+size) < 510) & ((y+size) < 253)) {
			do Screen.drawRectangle(x, y, x + size, y + size);
		}
   return;
  }
	
	 method void shoot() {
			do draw(0);
      let y = y + 2;
			do draw(1);
      return;
    }
}